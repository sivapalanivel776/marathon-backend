{
    "info": {
        "_postman_id": "marathon-backend-2026",
        "name": "Marathon Backend API",
        "description": "Complete API collection for Marathon Registration and Payment System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/auth/register",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"admin_token\", jsonData.access_token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Registration",
            "item": [
                {
                    "name": "Create Registration",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"razorpay_order_id\", jsonData.razorpayOrderId);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"mobileNumber\": \"+919876543210\",\n    \"gender\": \"Male\",\n    \"dateOfBirth\": \"1995-05-15\",\n    \"age\": 28,\n    \"presentAddress\": \"123 Main Street, Chennai\",\n    \"tshirtSize\": \"L\",\n    \"raceCategory\": \"5 KM\",\n    \"emergencyContactName\": \"Jane Doe\",\n    \"emergencyContactMobile\": \"+919876543211\",\n    \"waiverAccepted\": true,\n    \"amount\": 300\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/registrations",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "registrations"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Registrations (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:5000/registrations/admin/list",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "registrations",
                                "admin",
                                "list"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Registration Stats (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:5000/registrations/admin/stats",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "registrations",
                                "admin",
                                "stats"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Registration by ID (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:5000/registrations/admin/:id",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "registrations",
                                "admin",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "paste-registration-id-here"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Payment",
            "item": [
                {
                    "name": "Verify Payment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"razorpayOrderId\": \"{{razorpay_order_id}}\",\n    \"razorpayPaymentId\": \"pay_test123456789\",\n    \"signature\": \"test_signature_for_development\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:5000/payment/verify",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "payment",
                                "verify"
                            ]
                        },
                        "description": "Note: For real testing, use the frontend client/index.html which integrates with Razorpay Checkout. The signature must be valid for production."
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000"
        }
    ]
}